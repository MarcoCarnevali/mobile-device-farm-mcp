  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^22.19.11",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
